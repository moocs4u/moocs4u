<h1>Listing courses</h1>

<table>
<% @courses.each do |course| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>" >
    <td>
      <%= image_tag(course.image_url, class: 'list_image') %> 
    </td>
    <td class="list_description"> 
      <dl>
        <dt><%= course.code + ' ' +course.name %></dt>
        <dd><%= truncate(strip_tags(course.description), length: 80) %></dd>
        <dd>Instructor: Unkown  Institute:MIT</dd>
        <dd>Course Length: 6 weeks, Course starts: 2014.4.1</dd>
      </dl>
    </td>
    <td class="list_actions">
      <%= link_to 'Show', course %><br/>
      <%= link_to 'Edit', edit_course_path(course) %><br/> 
      <%= link_to 'Destroy', course, method: :delete,
                   data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br>

